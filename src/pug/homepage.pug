extends shared/_layout
block content
  main.page-main
    section.manufac-section
      .container
        .manufac-section__wrap.flex-wrap
          h2.common-title Производство комплектующих для строительства
          p.common-descr Комплексные поставки на Российский рынок профессиональных материалов для монтажа кровли и окон
          .manufac-section__companies.flex-wrap
            .manufac-section__company
              i.icon.icon-dax
            .manufac-section__company
              i.icon.icon-folder
            .manufac-section__company
              i.icon.icon-optima
            .manufac-section__company
              i.icon.icon-oklent
            .manufac-section__company
              i.icon.icon-fj
    section.product-section
      .container
        .product-section__wrap.flex-wrap
          h2.common-title Продукция
          p.common-descr Комплексные поставки на Российский рынок профессиональных материалов для монтажа кровли и окон
          .product-section__products.flex-wrap
            .product-section__item
              .product-section__item-img
                i.icon.icon-prod-icon1
              h3.product-section__item-title 
                a(href="#") Комплектующие<br> для кровли
            .product-section__item
              .product-section__item-img
                i.icon.icon-prod-icon2
              h3.product-section__item-title 
                a(href="#") Строительный<br> крепеж
            .product-section__item
              .product-section__item-img
                i.icon.icon-prod-icon3
              h3.product-section__item-title 
                a(href="#") Защитные<br> пленки
            .product-section__item
              .product-section__item-img
                i.icon.icon-prod-icon4
              h3.product-section__item-title 
                a(href="#") Комплектующие<br> для монтажа окон
    section.advantages
      .container
        .advantages__wrap.flex-wrap
          .advantages__titles
            h2.common-title.common-title--black преимущества Руфкомлект
            button.advantages__btn(type="button") Начать сотрудничество
          .advantages__more.flex-wrap
            .advantages__item
              h3.advantages__item-title Лидеры отрасли
              p.advantages__item-descr Мы лидеры на рынке комплек-тующих для строительства
            .advantages__item
              h3.advantages__item-title Короткие сроки
              p.advantages__item-descr Оперативное выполнение оптовых заказов
            .advantages__item
              h3.advantages__item-title Высокое качество
              p.advantages__item-descr Гарантируем отличное качество выпускаемой продукции
            .advantages__item
              h3.advantages__item-title Широкий ассортимент
              p.advantages__item-descr Более 300 наименований продукции
